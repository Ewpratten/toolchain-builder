#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS

%:
	dh $@  --with autotools-dev
	
override_dh_auto_configure:
	dh_auto_configure -- --target=arm-frc2018-linux-gnueabi --prefix=/usr --with-pkgversion='GDB for FRC 2018' --disable-nls --with-libexpat --datadir=/usr/share/frc2018 --with-system-gdbinit=/usr/share/frc2018/gdb/gdbinit --with-sysroot=/usr/arm-frc2018-linux-gnueabi/ --enable-lto

override_dh_auto_build:
	dh_auto_build -- -j3

override_dh_installinfo:
	rm -rf debian/gdb-arm-frc2018-linux-gnueabi/usr/share/info
	rm -rf debian/gdb-arm-frc2018-linux-gnueabi/usr/share/man
	rm -rf debian/gdb-arm-frc2018-linux-gnueabi/usr/include
	# this is probbably not the right dh for this, but it works as its after install
	chrpath -d debian/gdb-arm-frc2018-linux-gnueabi/usr/bin/arm-frc2018-linux-gnueabi-gdb
	mkdir -p debian/gdb-arm-frc2018-linux-gnueabi/usr/share/frc2018/gdb/
	cp debian/gdbinit debian/gdb-arm-frc2018-linux-gnueabi/usr/share/frc2018/gdb/gdbinit

override_dh_auto_test:


